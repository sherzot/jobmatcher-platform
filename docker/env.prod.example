# Production Environment Variables
DOCKER_REGISTRY=docker.io/sherdev

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=jobmatcher_prod
MYSQL_USER=jobmatcher_user
MYSQL_PASSWORD=your_secure_password

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# MinIO Configuration
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=your_secure_minio_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here

# Service Ports
AUTH_SERVICE_PORT=8080
ADMIN_SERVICE_PORT=8081
AGENT_SERVICE_PORT=8082
COMPANY_SERVICE_PORT=8083
JOB_SERVICE_PORT=8084
OFFER_SERVICE_PORT=8085
RESUME_SERVICE_PORT=8086
PARSER_SERVICE_PORT=8087
PDF_WORKER_PORT=8088

# Frontend URLs
WEB_FRONTEND_URL=https://jobmatcher.com
ADMIN_FRONTEND_URL=https://jobmatcher.com/admin
AGENT_FRONTEND_URL=https://jobmatcher.com/agent

# API Base URL
API_BASE_URL=https://jobmatcher.com/api

# Database Connection
DB_HOST=mysql-service
DB_PORT=3306
DB_NAME=jobmatcher_prod

# Redis Connection
REDIS_HOST=redis-service
REDIS_PORT=6379

# MinIO Connection
MINIO_ENDPOINT=minio-service:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=your_secure_minio_password

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ALLOWED_ORIGINS=https://jobmatcher.com,https://www.jobmatcher.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m
