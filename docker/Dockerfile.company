FROM golang:1.23 AS build
WORKDIR /src
COPY backend/company-service/ ./company-service/
WORKDIR /src/company-service
RUN go mod tidy && CGO_ENABLED=0 go build -o /out/company ./cmd/company-service

FROM gcr.io/distroless/base-debian12
COPY --from=build /out/company /company
EXPOSE 8080
ENTRYPOINT ["/company"]
